<%= form_for @bay do |f|%>
    <%=f.label :bay_number %>
    <%= f.number_field :bay_number %>
    <br><br>
    <%= f.label :date %>
    <%= f.date_field :date %>
    <br><br>
    <%= f.label :active %>
    <%= f.check_box :active %>
    <br><br>
    <%= f.label :production_id %>
    <%= f.collection_select :production_id, @productions, :id, :name, :include_blank => true%>
    <br><br>
    <%= f.label :user_id %>
    <%= f.collection_select :user_id, @users, :id, :username, :include_blank => true%>
    <br><br>
    <%= f.submit%>
<%end%>