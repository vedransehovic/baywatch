<%= form_for @bay do |f|%>
    <table>
        <tr><td><%=f.label :bay_number %></td><td><%= f.number_field :bay_number %></td></tr>
        <tr><td></td><td></td></tr>
        <tr><td><%= f.label :date %></td><td><%= f.date_field :date %></td></tr>
        <tr><td></td><td></td></tr>
        <tr><td><%= f.label :active %></td><td><%= f.check_box :active %></td></tr>
        <tr><td></td><td></td></tr>
        <tr><td><%= f.label :production_id %></td><td><%= f.collection_select :production_id, @productions, :id, :name, :include_blank => true%></td></tr>
        <tr><td></td><td></td></tr>
        <tr><td><%= f.label :user_id %></td><td><%= f.collection_select :user_id, @users, :id, :username, :include_blank => true%></td></tr>
        <tr><td></td><td></td></tr>
        <tr><td><%= f.submit%></td><td></td></tr>
    </table>
<%end%>